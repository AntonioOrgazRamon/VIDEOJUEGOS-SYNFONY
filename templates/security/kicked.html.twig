            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            text-align: left;
        }

        .kicked-info p {
            color: #fff;
            margin: 0;
            font-size: 0.9375rem;
            line-height: 1.6;
        }

        .kicked-info strong {
            color: #ffc107;
            display: block;
            margin-bottom: 0.5rem;
            font-size: 1rem;
        }

        .btn-login {
            display: inline-block;
            padding: 1rem 2.5rem;
            background: linear-gradient(135deg, #ffc107 0%, #ffb300 100%);
            color: #1a1a2e;
            text-decoration: none;
            border-radius: 12px;
            font-weight: 600;
            font-size: 1.125rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(255, 193, 7, 0.3);
            border: none;
            cursor: pointer;
        }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 193, 7, 0.4);
        }

        .btn-login:active {
            transform: translateY(0);
        }
