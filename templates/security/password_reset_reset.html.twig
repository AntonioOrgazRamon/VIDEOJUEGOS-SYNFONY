{% extends 'base.html.twig' %}

{% block title %}Nueva Contrase침a{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: linear-gradient(135deg, #f5f6f8 0%, #eef0f3 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            padding: 2rem 1rem;
        }

        .reset-container {
            background: #ffffff;
            border-radius: 20px;
            box-shadow: 0 8px 32px rgba(102, 111, 136, 0.08), 0 2px 8px rgba(102, 111, 136, 0.04);
            padding: 3.5rem 3rem;
            width: 100%;
            max-width: 440px;
            border: 1px solid #b5bac9;
            animation: fadeIn 0.5s ease-out;
            position: relative;
            overflow: hidden;
        }

        .reset-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #666F88 0%, #788199 50%, #8990a2 100%);
        }

        .reset-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        .reset-header h1 {
            color: #666F88;
            font-weight: 600;
            font-size: 1.875rem;
            margin-bottom: 0.5rem;
        }

        .reset-header p {
            color: #8990a2;
            font-size: 0.9375rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            color: #788199;
            font-weight: 500;
            margin-bottom: 0.625rem;
            font-size: 0.875rem;
        }

        .form-control {
            width: 100%;
            padding: 0.875rem 1.125rem;
            border: 1.5px solid #b5bac9;
            border-radius: 10px;
            font-size: 0.9375rem;
            transition: all 0.25s ease;
            background: #ffffff;
            color: #666F88;
        }

        .form-control:focus {
            outline: none;
            border-color: #788199;
            box-shadow: 0 0 0 4px rgba(120, 129, 153, 0.1);
        }

        .btn-submit {
            width: 100%;
            padding: 0.9375rem;
            background: linear-gradient(135deg, #666F88 0%, #788199 100%);
            border: none;
            border-radius: 10px;
            color: white;
            font-weight: 500;
            font-size: 0.9375rem;
            cursor: pointer;
            transition: all 0.25s ease;
            margin-top: 0.5rem;
            box-shadow: 0 4px 12px rgba(102, 111, 136, 0.25);
        }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 111, 136, 0.35);
        }

        .btn-submit:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .alert {
            border-radius: 10px;
            padding: 1rem 1.25rem;
            margin-bottom: 1.5rem;
            border: 1.5px solid;
            font-size: 0.875rem;
        }

        .alert-danger {
            background: #fef2f2;
            color: #991b1b;
            border-color: #fecaca;
        }

        .alert-success {
            background: #f0fdf4;
            color: #166534;
            border-color: #bbf7d0;
        }

        .password-requirements {
            font-size: 0.8125rem;
            color: #8990a2;
            margin-top: 0.5rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="reset-container">
        <div class="reset-header">
            <h1>游댐 Nueva Contrase침a</h1>
            <p>Ingresa tu nueva contrase침a</p>
        </div>

        <div id="alertContainer"></div>

        <form id="resetPasswordForm">
            <div class="form-group">
                <label for="newPassword" class="form-label">Nueva Contrase침a</label>
                <input 
                    type="password" 
                    id="newPassword" 
                    name="newPassword" 
                    class="form-control" 
                    required
                    autofocus
                    minlength="6"
                    placeholder="M칤nimo 6 caracteres"
                >
                <div class="password-requirements">
                    La contrase침a debe tener al menos 6 caracteres
                </div>
            </div>

            <div class="form-group">
                <label for="confirmPassword" class="form-label">Confirmar Contrase침a</label>
                <input 
                    type="password" 
                    id="confirmPassword" 
                    name="confirmPassword" 
                    class="form-control" 
                    required
                    minlength="6"
                    placeholder="Repite la contrase침a"
                >
            </div>

            <button type="submit" class="btn-submit" id="submitBtn">
                Cambiar Contrase침a
            </button>
        </form>
    </div>

    <script>
        const resetId = '{{ resetId }}';
        if (!resetId) {
            window.location.href = '{{ path('app_password_reset_request') }}';
        }

        document.getElementById('resetPasswordForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            const submitBtn = document.getElementById('submitBtn');
            
            if (newPassword.length < 6) {
                showAlert('La contrase침a debe tener al menos 6 caracteres', 'danger');
                return;
            }
            
            if (newPassword !== confirmPassword) {
                showAlert('Las contrase침as no coinciden', 'danger');
                return;
            }
            
            submitBtn.disabled = true;
            submitBtn.textContent = 'Cambiando contrase침a...';
            
            try {
                const response = await fetch('{{ path('app_password_reset_reset') }}', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify({
                        resetId: resetId,
                        newPassword: newPassword
                    })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    showAlert('Contrase침a actualizada correctamente. Redirigiendo...', 'success');
                    setTimeout(() => {
                        window.location.href = '{{ path('app_login') }}';
                    }, 2000);
                } else {
                    showAlert(data.message || 'Error al cambiar la contrase침a', 'danger');
                    submitBtn.disabled = false;
                    submitBtn.textContent = 'Cambiar Contrase침a';
                }
            } catch (error) {
                showAlert('Error de conexi칩n. Por favor intenta de nuevo', 'danger');
                submitBtn.disabled = false;
                submitBtn.textContent = 'Cambiar Contrase침a';
            }
        });
        
        function showAlert(message, type) {
            const alertContainer = document.getElementById('alertContainer');
            const alert = document.createElement('div');
            alert.className = 'alert alert-' + type;
            alert.textContent = message;
            alertContainer.innerHTML = '';
            alertContainer.appendChild(alert);
        }
    </script>
{% endblock %}

