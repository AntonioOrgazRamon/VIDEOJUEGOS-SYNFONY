{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: linear-gradient(135deg, #f5f6f8 0%, #eef0f3 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            padding: 2rem 1rem;
        }

        .login-container {
            background: #ffffff;
            border-radius: 20px;
            box-shadow: 0 8px 32px rgba(102, 111, 136, 0.08), 0 2px 8px rgba(102, 111, 136, 0.04);
            padding: 3.5rem 3rem;
            width: 100%;
            max-width: 440px;
            border: 1px solid #b5bac9;
            animation: fadeIn 0.5s ease-out;
            position: relative;
            overflow: hidden;
        }

        .login-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #666F88 0%, #788199 50%, #8990a2 100%);
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .login-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        .login-header h1 {
            color: #666F88;
            font-weight: 600;
            font-size: 1.875rem;
            margin-bottom: 0.5rem;
            letter-spacing: -0.02em;
        }

        .login-header p {
            color: #8990a2;
            font-size: 0.9375rem;
            font-weight: 400;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            color: #788199;
            font-weight: 500;
            margin-bottom: 0.625rem;
            font-size: 0.875rem;
            letter-spacing: 0.01em;
        }

        .form-control {
            width: 100%;
            padding: 0.875rem 1.125rem;
            border: 1.5px solid #b5bac9;
            border-radius: 10px;
            font-size: 0.9375rem;
            transition: all 0.25s ease;
            background: #ffffff;
            color: #666F88;
        }

        .form-control:hover {
            border-color: #a3a8b7;
            background: #fafbfc;
        }

        .form-control:focus {
            outline: none;
            border-color: #788199;
            box-shadow: 0 0 0 4px rgba(120, 129, 153, 0.1);
            background: #ffffff;
        }

        .form-control::placeholder {
            color: #a3a8b7;
        }

        .btn-login {
            width: 100%;
            padding: 0.9375rem;
            background: linear-gradient(135deg, #666F88 0%, #788199 100%);
            border: none;
            border-radius: 10px;
            color: white;
            font-weight: 500;
            font-size: 0.9375rem;
            cursor: pointer;
            transition: all 0.25s ease;
            margin-top: 0.5rem;
            letter-spacing: 0.01em;
            box-shadow: 0 4px 12px rgba(102, 111, 136, 0.25);
        }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 111, 136, 0.35);
            background: linear-gradient(135deg, #5a6377 0%, #6a7488 100%);
        }

        .btn-login:active {
            transform: translateY(0);
            box-shadow: 0 2px 8px rgba(102, 111, 136, 0.25);
        }

        .btn-forgot-password {
            width: 100%;
            padding: 0.75rem;
            background: #f8f9fa;
            border: 1.5px solid #b5bac9;
            border-radius: 10px;
            color: #788199;
            font-weight: 500;
            font-size: 0.875rem;
            cursor: pointer;
            transition: all 0.25s ease;
            margin-top: 1rem;
        }

        .btn-forgot-password:hover {
            background: #f1f3f5;
            border-color: #a3a8b7;
            color: #666F88;
        }

        .alert {
            border-radius: 10px;
            padding: 1rem 1.25rem;
            margin-bottom: 1.5rem;
            border: 1.5px solid;
            font-size: 0.875rem;
            animation: slideDown 0.3s ease;
        }

        @keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .alert-danger {
            background: #fef2f2;
            color: #991b1b;
            border-color: #fecaca;
        }

        .divider {
            text-align: center;
            margin: 1.75rem 0;
            position: relative;
        }

        .divider::before {
            content: '';
            position: absolute;
            left: 0;
            top: 50%;
            width: 100%;
            height: 1px;
            background: linear-gradient(90deg, transparent, #b5bac9, transparent);
        }

        .divider span {
            background: #ffffff;
            padding: 0 1rem;
            position: relative;
            color: #a3a8b7;
            font-size: 0.8125rem;
        }

        .register-link {
            text-align: center;
            margin-top: 1.75rem;
            color: #8990a2;
            font-size: 0.875rem;
        }

        .register-link a {
            color: #788199;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.2s ease;
        }

        .register-link a:hover {
            color: #666F88;
            text-decoration: underline;
        }

        .user-logged-in {
            text-align: center;
            padding: 1.5rem;
            background: #f8f9fa;
            border-radius: 10px;
            margin-bottom: 1.5rem;
            border: 1.5px solid #b5bac9;
        }

        .user-logged-in p {
            color: #788199;
            margin-bottom: 0.75rem;
            font-size: 0.9375rem;
        }

        .user-logged-in a {
            color: #788199;
            text-decoration: none;
            font-weight: 500;
            font-size: 0.875rem;
        }

        .user-logged-in a:hover {
            color: #666F88;
            text-decoration: underline;
        }
    </style>
{% endblock %}

