{% extends 'base.html.twig' %}

{% block title %}Recuperar Contrase√±a{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: linear-gradient(135deg, #f5f6f8 0%, #eef0f3 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            padding: 2rem 1rem;
        }

        .reset-container {
            background: #ffffff;
            border-radius: 20px;
            box-shadow: 0 8px 32px rgba(102, 111, 136, 0.08), 0 2px 8px rgba(102, 111, 136, 0.04);
            padding: 3.5rem 3rem;
            width: 100%;
            max-width: 440px;
            border: 1px solid #b5bac9;
            animation: fadeIn 0.5s ease-out;
            position: relative;
            overflow: hidden;
        }

        .reset-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #666F88 0%, #788199 50%, #8990a2 100%);
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .reset-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        .reset-header h1 {
            color: #666F88;
            font-weight: 600;
            font-size: 1.875rem;
            margin-bottom: 0.5rem;
        }

        .reset-header p {
            color: #8990a2;
            font-size: 0.9375rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            color: #788199;
            font-weight: 500;
            margin-bottom: 0.625rem;
            font-size: 0.875rem;
        }

        .form-control {
            width: 100%;
            padding: 0.875rem 1.125rem;
            border: 1.5px solid #b5bac9;
            border-radius: 10px;
            font-size: 0.9375rem;
            transition: all 0.25s ease;
            background: #ffffff;
            color: #666F88;
        }

        .form-control:focus {
            outline: none;
            border-color: #788199;
            box-shadow: 0 0 0 4px rgba(120, 129, 153, 0.1);
        }

        .btn-submit {
            width: 100%;
            padding: 0.9375rem;
            background: linear-gradient(135deg, #666F88 0%, #788199 100%);
            border: none;
            border-radius: 10px;
            color: white;
            font-weight: 500;
            font-size: 0.9375rem;
            cursor: pointer;
            transition: all 0.25s ease;
            margin-top: 0.5rem;
            box-shadow: 0 4px 12px rgba(102, 111, 136, 0.25);
        }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 111, 136, 0.35);
        }

        .btn-submit:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

        .back-link {
            text-align: center;
            margin-top: 1.75rem;
        }

        .back-link a {
            color: #788199;
            text-decoration: none;
            font-weight: 500;
            font-size: 0.875rem;
        }

        .back-link a:hover {
            color: #666F88;
            text-decoration: underline;
        }

        .alert {
            border-radius: 10px;
            padding: 1rem 1.25rem;
            margin-bottom: 1.5rem;
            border: 1.5px solid;
            font-size: 0.875rem;
        }

        .alert-success {
            background: #f0fdf4;
            color: #166534;
            border-color: #bbf7d0;
        }

        .alert-danger {
            background: #fef2f2;
            color: #991b1b;
            border-color: #fecaca;
        }

        .loading {
            display: none;
            text-align: center;
            color: #788199;
            margin-top: 1rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="reset-container">
        <div class="reset-header">
            <h1>üîê Recuperar Contrase√±a</h1>
            <p>Ingresa tu email para recibir un c√≥digo de verificaci√≥n</p>
        </div>

        <div id="alertContainer"></div>

        <form id="resetRequestForm">
            <div class="form-group">
                <label for="email" class="form-label">Email</label>
                <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    class="form-control" 
                    required
                    autofocus
                    placeholder="tu@email.com"
                >
            </div>

            <button type="submit" class="btn-submit" id="submitBtn">
                Enviar C√≥digo
            </button>

            <div class="loading" id="loading">
                Enviando c√≥digo...
            </div>
        </form>

        <div class="back-link">
            <a href="{{ path('app_login') }}">‚Üê Volver al inicio de sesi√≥n</a>
        </div>
    </div>

    <script>
        document.getElementById('resetRequestForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const email = document.getElementById('email').value.trim();
            const submitBtn = document.getElementById('submitBtn');
            const loading = document.getElementById('loading');
            const alertContainer = document.getElementById('alertContainer');
            
            if (!email) {
                showAlert('Por favor ingresa tu email', 'danger');
                return;
            }
            
            submitBtn.disabled = true;
            loading.style.display = 'block';
            alertContainer.innerHTML = '';
            
            try {
                const response = await fetch('{{ path('app_password_reset_request') }}', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify({ email: email })
                });
                
                const data = await response.json();
                
                if (data.success && data.resetId) {
                    // En modo desarrollo, mostrar el c√≥digo de forma destacada
                    if (data.dev_mode && data.code) {
                        const codeAlert = document.createElement('div');
                        codeAlert.className = 'alert';
                        codeAlert.style.cssText = 'background: linear-gradient(135deg, #666F88 0%, #788199 100%); color: white; border: none; font-size: 1.1rem; text-align: center; padding: 2rem; margin-bottom: 1.5rem;';
                        codeAlert.innerHTML = `
                            <div style="font-size: 1.5rem; font-weight: bold; margin-bottom: 1rem;">üîß MODO DESARROLLO</div>
                            <div style="font-size: 2.5rem; font-weight: bold; letter-spacing: 0.5rem; font-family: monospace; margin: 1rem 0; background: rgba(255,255,255,0.2); padding: 1rem; border-radius: 10px;">${data.code}</div>
                            <div style="font-size: 0.9rem; opacity: 0.9;">Usa este c√≥digo para continuar</div>
                        `;
                        document.getElementById('alertContainer').appendChild(codeAlert);
                        
                        // Tambi√©n mostrar en consola
                        console.log('üîß C√ìDIGO DE RESET (DEV MODE):', data.code);
                    } else {
                        showAlert(data.message, 'success');
                    }
                    // Redirigir a la p√°gina de verificaci√≥n de c√≥digo
                    setTimeout(() => {
                        window.location.href = '{{ path('app_password_reset_verify') }}?resetId=' + data.resetId;
                    }, data.dev_mode ? 3000 : 2000); // M√°s tiempo en dev para ver el c√≥digo
                } else if (data.success) {
                    // Si no hay resetId, solo mostrar mensaje (por seguridad)
                    showAlert(data.message, 'success');
                    submitBtn.disabled = false;
                } else {
                    showAlert(data.message || 'Error al enviar el c√≥digo', 'danger');
                    submitBtn.disabled = false;
                }
            } catch (error) {
                showAlert('Error de conexi√≥n. Por favor intenta de nuevo', 'danger');
                submitBtn.disabled = false;
            } finally {
                loading.style.display = 'none';
            }
        });
        
        function showAlert(message, type) {
            const alertContainer = document.getElementById('alertContainer');
            const alert = document.createElement('div');
            alert.className = 'alert alert-' + type;
            alert.textContent = message;
            alertContainer.innerHTML = '';
            alertContainer.appendChild(alert);
        }
    </script>
{% endblock %}

