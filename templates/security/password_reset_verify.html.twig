{% extends 'base.html.twig' %}

{% block title %}Verificar C√≥digo{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: linear-gradient(135deg, #f5f6f8 0%, #eef0f3 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            padding: 2rem 1rem;
        }

        .verify-container {
            background: #ffffff;
            border-radius: 20px;
            box-shadow: 0 8px 32px rgba(102, 111, 136, 0.08), 0 2px 8px rgba(102, 111, 136, 0.04);
            padding: 3.5rem 3rem;
            width: 100%;
            max-width: 440px;
            border: 1px solid #b5bac9;
            animation: fadeIn 0.5s ease-out;
            position: relative;
            overflow: hidden;
        }

        .verify-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #666F88 0%, #788199 50%, #8990a2 100%);
        }

        .verify-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        .verify-header h1 {
            color: #666F88;
            font-weight: 600;
            font-size: 1.875rem;
            margin-bottom: 0.5rem;
        }

        .verify-header p {
            color: #8990a2;
            font-size: 0.9375rem;
        }

        .code-inputs {
            display: flex;
            gap: 0.75rem;
            justify-content: center;
            margin-bottom: 2rem;
        }

        .code-input {
            width: 50px;
            height: 60px;
            text-align: center;
            font-size: 1.5rem;
            font-weight: 600;
            border: 2px solid #b5bac9;
            border-radius: 10px;
            background: #ffffff;
            color: #666F88;
            transition: all 0.25s ease;
        }

        .code-input:focus {
            outline: none;
            border-color: #788199;
            box-shadow: 0 0 0 4px rgba(120, 129, 153, 0.1);
        }

        .btn-submit {
            width: 100%;
            padding: 0.9375rem;
            background: linear-gradient(135deg, #666F88 0%, #788199 100%);
            border: none;
            border-radius: 10px;
            color: white;
            font-weight: 500;
            font-size: 0.9375rem;
            cursor: pointer;
            transition: all 0.25s ease;
            box-shadow: 0 4px 12px rgba(102, 111, 136, 0.25);
        }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 111, 136, 0.35);
        }

        .btn-submit:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .alert {
            border-radius: 10px;
            padding: 1rem 1.25rem;
            margin-bottom: 1.5rem;
            border: 1.5px solid;
            font-size: 0.875rem;
        }

        .alert-danger {
            background: #fef2f2;
            color: #991b1b;
            border-color: #fecaca;
        }

        .alert-success {
            background: #f0fdf4;
            color: #166534;
            border-color: #bbf7d0;
        }

        .back-link {
            text-align: center;
            margin-top: 1.75rem;
        }

        .back-link a {
            color: #788199;
            text-decoration: none;
            font-weight: 500;
            font-size: 0.875rem;
        }

        .back-link a:hover {
            color: #666F88;
            text-decoration: underline;
        }

        .timer {
            text-align: center;
            color: #8990a2;
            font-size: 0.875rem;
            margin-bottom: 1rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="verify-container">
        <div class="verify-header">
            <h1>üî¢ Verificar C√≥digo</h1>
            <p>Ingresa el c√≥digo de 6 d√≠gitos que recibiste por email</p>
        </div>

        <div id="alertContainer"></div>

        <div class="timer" id="timer">
            El c√≥digo expira en <span id="timerValue">5:00</span>
        </div>

        <form id="verifyForm">
            <div class="code-inputs">
                <input type="text" class="code-input" maxlength="1" id="code1" autocomplete="off">
                <input type="text" class="code-input" maxlength="1" id="code2" autocomplete="off">
                <input type="text" class="code-input" maxlength="1" id="code3" autocomplete="off">
                <input type="text" class="code-input" maxlength="1" id="code4" autocomplete="off">
                <input type="text" class="code-input" maxlength="1" id="code5" autocomplete="off">
                <input type="text" class="code-input" maxlength="1" id="code6" autocomplete="off">
            </div>

            <button type="submit" class="btn-submit" id="submitBtn">
                Verificar C√≥digo
            </button>
        </form>

        <div class="back-link">
            <a href="{{ path('app_login') }}">‚Üê Volver al inicio de sesi√≥n</a>
        </div>
    </div>

    <script>
        const resetId = '{{ resetId }}';
        if (!resetId) {
            window.location.href = '{{ path('app_password_reset_request') }}';
        }

        // Auto-focus y auto-avance entre inputs
        const inputs = ['code1', 'code2', 'code3', 'code4', 'code5', 'code6'];
        inputs.forEach((id, index) => {
            const input = document.getElementById(id);
            input.addEventListener('input', function(e) {
                if (e.target.value.length === 1 && index < inputs.length - 1) {
                    document.getElementById(inputs[index + 1]).focus();
                }
            });
            input.addEventListener('keydown', function(e) {
                if (e.key === 'Backspace' && e.target.value === '' && index > 0) {
                    document.getElementById(inputs[index - 1]).focus();
                }
            });
        });

        // Timer de 5 minutos
        let timeLeft = 300; // 5 minutos en segundos
        const timerInterval = setInterval(() => {
            timeLeft--;
            const minutes = Math.floor(timeLeft / 60);
            const seconds = timeLeft % 60;
            document.getElementById('timerValue').textContent = 
                `${minutes}:${seconds.toString().padStart(2, '0')}`;
            
            if (timeLeft <= 0) {
                clearInterval(timerInterval);
                showAlert('El c√≥digo ha expirado. Solicita uno nuevo', 'danger');
                setTimeout(() => {
                    window.location.href = '{{ path('app_password_reset_request') }}';
                }, 2000);
            }
        }, 1000);

        document.getElementById('verifyForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const code = inputs.map(id => document.getElementById(id).value).join('');
            const submitBtn = document.getElementById('submitBtn');
            
            if (code.length !== 6) {
                showAlert('Por favor ingresa el c√≥digo completo de 6 d√≠gitos', 'danger');
                return;
            }
            
            submitBtn.disabled = true;
            submitBtn.textContent = 'Verificando...';
            
            try {
                const response = await fetch('{{ path('app_password_reset_verify') }}', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify({
                        resetId: resetId,
                        code: code
                    })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    showAlert('C√≥digo verificado correctamente', 'success');
                    setTimeout(() => {
                        window.location.href = '/password-reset/reset?resetId=' + data.resetId;
                    }, 1500);
                } else {
                    showAlert(data.message || 'C√≥digo incorrecto', 'danger');
                    // Limpiar inputs
                    inputs.forEach(id => {
                        document.getElementById(id).value = '';
                    });
                    document.getElementById('code1').focus();
                    submitBtn.disabled = false;
                    submitBtn.textContent = 'Verificar C√≥digo';
                }
            } catch (error) {
                showAlert('Error de conexi√≥n. Por favor intenta de nuevo', 'danger');
                submitBtn.disabled = false;
                submitBtn.textContent = 'Verificar C√≥digo';
            }
        });
        
        function showAlert(message, type) {
            const alertContainer = document.getElementById('alertContainer');
            const alert = document.createElement('div');
            alert.className = 'alert alert-' + type;
            alert.textContent = message;
            alertContainer.innerHTML = '';
            alertContainer.appendChild(alert);
        }

        // Focus en el primer input
        document.getElementById('code1').focus();
    </script>
{% endblock %}

