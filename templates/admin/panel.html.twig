    function reviewAppeal(appealId, action, userId) {
        const responseTextarea = document.getElementById(`response-${appealId}`);
        const response = responseTextarea ? responseTextarea.value.trim() : '';
        
        const actionText = action === 'approve' ? 'aprobar y desbanear' : 'rechazar';
        if (!confirm(`¬øEst√°s seguro de que quieres ${actionText} esta apelaci√≥n?`)) {
            return;
        }

        fetch(`/admin/ban-appeals/${appealId}/review`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            },
            body: JSON.stringify({
                action: action,
                response: response
            })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                if (typeof window.showSuccess === 'function') {
                    window.showSuccess(data.message);
                } else {
                    alert('‚úÖ ' + data.message);
                }
                loadBanAppeals(); // Recargar apelaciones
                if (action === 'approve') {
                    loadBannedUsers(); // Actualizar lista de baneados
